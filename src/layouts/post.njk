{% extends "./base.njk" %}

{% block content %}

  <article class="post h-entry">
    <header class="post__header p-name">
      <h1>{{ title }}</h1>

      <div class="post__details">
        <time datetime="{{ page.date | htmlDateString }}" class="dt-published">
          {{ page.date | readableDate }}
        </time>
        <p style="display:none">Published by <a class="p-author">James Knight</a>
          <p style="display:none" class="p-summary">{{ content | excerpt | safe  }}</p>
        </p>
        <span> | </span>
        <span>{{ content | readingTime }} read</span>
        {%- if epistemic.status %}
          <br><br>
      Epistemic Status (1-5): {{- epistemic.status }}
        {%- endif %}
        {%- if epistemic.effort %}
          <br>
      Epistemic Effort (1-5): {{- epistemic.effort}}
        {%- endif %}
      </div>

    </header>

    <main class="post__content e-content">
      {{ content | safe }}
    </main>

    <aside class="post__aside">
      <div class="post__tags">
        {% for tag in tags | pageTags %}
          {% set tagUrl %}/tags/{{ tag | slug}}/{% endset %}
          <a href="{{ tagUrl | url }}">#{{ tag }}</a>
        {% endfor %}
      </div>

      <nav class="post__pagination">
        {%- set nextPost = collections.posts | getNextCollectionItem(page) %}
        {%- if nextPost %}

          <a href="{{ nextPost.url | url }}">
            <span>←</span>
            <span>{{ nextPost.data.title }}</span>
          </a>

        {% endif %}

        {%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
        {%- if previousPost %}

          <a href="{{ previousPost.url | url }}">
            <span>{{ previousPost.data.title }}</span>
            <span>→</span>
          </a>

        {% endif %}
      </nav>
    </aside>

    {# {% include "webmentions.njk" %} #}

  </article>
{% endblock content %}